{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "vmName",
        "type": "Microsoft.Common.TextBox",
        "label": "Virtual machine name",
        "toolTip": "The name of the virtual machine",
        "defaultValue": "NTG-DEV-Nit",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9A-Z-]{3,15}$",
          "validationMessage": "The virtual machine Name must be between 3 and 15 characters long and contain letters, numbers and hyphens only."
        },
        "visible": true
      },
      {
        "name": "vmSize",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": "object",
        "toolTip": "object",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        },
        "visible": true
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Username",
        "toolTip": "Admin username for the virtual machine",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        },
        "visible": true
      },
      {
        "name": "credentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "Type of authentication to use on the virtual machine. SSH Public Key is recommended",
          "password": "Admin password for the virtual machine",
          "sshPublicKey": "SSH Public Key for the virtual machine"
        },
        "constraints": {
          "required": true,
          "customPasswordRegex": "^(?=.*[A-Z])(?=.*[.!@#$%^&*()-_=+])(?=.*[0-9])(?=.*[a-z]).{12,40}$",
          "customValidationMessage": "Password must be at least 12 characters long, and contain upper case, lower case, number and symbol"
        },
        "options": {
          "hideConfirmation": false,
          "hidePassword": false
        },
        "osPlatform": "Linux",
        "visible": true
      },
      {
        "name": "secureBoot",
        "type": "Microsoft.Common.CheckBox",
        "label": "Secure Boot setting",
        "toolTip": "The Secure Boot setting of the virtual machine",
        "constraints": {
          "required": false
        },
        "visible": true
      },
      {
        "name": "vTPM",
        "type": "Microsoft.Common.CheckBox",
        "label": "vTPM setting",
        "toolTip": "The vTPM setting of the virtual machine",
        "constraints": {
          "required": false
        },
        "visible": true
      }
    ],
    "steps": [
      {
        "name": "Networking",
        "label": "Networking",
        "subLabel": {
          "preValidation": "Configure the virtual machine's network settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Networking",
        "elements": [
          {
            "name": "publicIpAddress",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP Address for the virtual machine",
              "domainNameLabel": "DNS Prefix for the public IP Address"
            },
            "toolTip": {
              "publicIpAddress": "Public IP Address for the virtual machine",
              "domainNameLabel": "DNS Prefix for the public IP Address, must be globally unique"
            },
            "defaultValue": {
              "publicIpAddressName": "[toLower(concat(base64ToString('vmName'), '-ip-', take(replace(newGuid(), '-', ''), 6)))]",
              "domainNameLabel": "[toLower(concat(base64ToString('vmName'), '-dn-', take(replace(newGuid(), '-', ''), 6)))]"
            },
            "options": {
              "hideExisting": true,
              "hideNone": true
            },
            "constraints": {
              "required": {
                "domainNameLabel": true
              }
            }
          }
        ]
      }
    ],
    "outputs": {
      "vmName": "[basics('vmName')]",
      "location": "[location()]",
     "adminPasswordOrKey": "[if(equals(base64ToString('credentials').authenticationType, 'password'), base64ToString('credentials').password, base64ToString('credentials').sshPublicKey)]"
      }
    }
}